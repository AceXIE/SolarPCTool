<UserControl x:Class="SolarPCTool.Pages.LogMgmt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:content="clr-namespace:SolarPCTool.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <content:RealTimeMeasurement Margin="{StaticResource SplitLeft}"/>
        <GridSplitter Grid.Column="1" IsEnabled="False" />

        <Grid Grid.Column="2" Margin="{StaticResource SplitRight}">
            <Label Content="Log Management" />
        </Grid>
    </Grid>
</UserControl>
